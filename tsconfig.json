{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./source/*"
            ],
            "@src/*": [
                "./source/*"
            ],
            "@test/*": [
                "./test/*"
            ]
        },
        "outDir": "./dist"
    },
    "include": ["source", "test"]
}